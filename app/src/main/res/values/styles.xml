<resources xmlns:tools="http://schemas.android.com/tools">

    <?xml version="1.0" encoding="utf-8"?>
    <resources>
        <style name="MTRLThemeLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <item name="colorPrimary">@color/white</item>
            <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
            <item name="colorPrimaryDark">@color/white</item>
            <item name="colorAccent">@color/green_glass</item>

        </style>

        <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
            <item name="android:windowIsFloating">false</item>
            <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
            <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        </style>

        <style name="EditTextDialog" parent="Theme.MaterialComponents.Light.Dialog">
            <item name="dialogCornerRadius">10dp</item>
            <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
            <item name="android:windowMinWidthMinor">80%</item>
        </style>
    </resources>

    <style name="AppTheme.Main" parent="Base.Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/background_round_corner</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <style name="SecondAppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/backdrop</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


</resources>
